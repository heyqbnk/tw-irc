{
  "name": "tw-irc",
  "version": "1.0.1",
  "description": "Library for working with Twitch IRC",
  "main": "index.js",
  "repository": "https://github.com/wolframdeus/twitch.irc.git",
  "author": "Wolfram Deus <wolfram.deus@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepublishOnly": "yarn test && yarn lint && yarn build",
    "build": "tsc",
    "format": "prettier --write \"lib/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "dev": "webpack-dev-server",
    "test": "jest --config jest.config.js"
