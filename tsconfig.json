{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./dist"
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
